<!--Page ajout de notes de cours-->
<!DOCTYPE html>
<html lang="fr">

<header>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="../stylesheet/ajout.css">
    <title>BA | Ajouter une note de cours</title>
</header>

<body>
    <div class="nav">
        <nav>
            <p><a class="liennav" href="/"tabindex="1">Accueil</a> | <a class="liennav" href="/accueil/notesdecours" tabindex="2">Toutes les notes de cours</a> | <a class="liennav" href="/accueil/ajoutdocument" tabindex="3">Retour</a></p>
        </nav>
    </div>

    <h1>Ajouter des notes de cours</h1>

    <div class="ajoutdoc">
        <form method="POST">
            <label for="n_title">Titre :</label>
            <input id="n_title" type="text" name="n_title" value="" required=""></br>
            <label for="code_cours">Code de cours :</label>
            <input id="code_cours" type="text" name="code_cours" value="" required=""></br>
            <label for="idstudent">Identification :</label>
            <input id="idstudent" type="numbers" name="idstudent" value="" required=""></br>
            <label for="n_description">Description :</label>
            <textarea name="n_description" id="n_description"></textarea></br>
            <label for="documentPDF">Ajouter un fichier PDF :</label>
            <input type="file" id="fichierPDF" name="fichierPDF" accept=".pdf"></br>
            </br>
            <input type="submit" value="Ajouter une note de cours">
        </form>
    </div>

</body>

